<?xml version="1.0" encoding="utf-8"?>

<lt.eliga.u2020.ui.activity_main.gallery.GalleryItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gallery_item_background"
    >

    <lt.eliga.u2020.ui.misc.ForegroundImageView
        android:id="@+id/gallery_image_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        tools:src="#f00" />

    <TextView
        android:id="@+id/gallery_image_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="@drawable/gradient_overlay"
        android:padding="6dp"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="This Is The Title"
        style="@style/Widget.U2020.GalleryImage" />
</lt.eliga.u2020.ui.activity_main.gallery.GalleryItemView>
